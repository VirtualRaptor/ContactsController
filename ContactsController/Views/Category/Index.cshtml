@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Kontakty</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Dodaj nowy kontakt
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Hasło</th>
            <th>Kategoria</th>
            <th>Podkategoria</th>
            <th>Telefon</th>
            <th>DataUrodzenia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="15%">@item.Imię</td>
                <td width="15%">@item.Nazwisko</td>
                <td width="15%">@item.Email</td>
                <td width="15%">@item.Hasło</td>
                <td width="15%">@item.Kategoria</td>
                <td width="15%">@item.PodKategoria</td>
                <td width="15%">@item.Telefon</td>
                <td width="10%">@item.DataUrodzin</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-fill"></i> &nbsp; Edytuj
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> &nbsp; Usuń
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
